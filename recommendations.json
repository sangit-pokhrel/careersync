{
  "info": {
    "name": "Job Recommendations API",
    "_postman_id": "job-recommendations-2024",
    "description": "Complete API collection for the ML-based job recommendation system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('accessToken', jsonData.accessToken);",
                  "    pm.environment.set('userId', jsonData.user._id);",
                  "    console.log('âœ… Token saved:', jsonData.accessToken);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login and get access token (automatically saved to environment)"
          }
        }
      ]
    },
    {
      "name": "2. CV Analysis",
      "item": [
        {
          "name": "Upload & Analyze CV",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 202 || pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('analysisId', jsonData.analysisId);",
                  "    console.log('âœ… Analysis ID:', jsonData.analysisId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "cv",
                  "type": "file",
                  "src": "/path/to/your/cv.pdf"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/cv/analyze",
              "host": ["{{base_url}}"],
              "path": ["cv", "analyze"]
            },
            "description": "Upload CV for AI analysis. Returns analysis ID."
          }
        },
        {
          "name": "Get Analysis Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cv/analyses/{{analysisId}}",
              "host": ["{{base_url}}"],
              "path": ["cv", "analyses", "{{analysisId}}"]
            },
            "description": "Check status of CV analysis (queued, processing, done, failed)"
          }
        },
        {
          "name": "Get Latest Analysis",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cv/analyses/latest",
              "host": ["{{base_url}}"],
              "path": ["cv", "analyses", "latest"]
            },
            "description": "Get user's latest completed CV analysis"
          }
        },
        {
          "name": "List All My Analyses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/cv/analyses",
              "host": ["{{base_url}}"],
              "path": ["cv", "analyses"]
            },
            "description": "List all CV analyses for current user"
          }
        }
      ]
    },
    {
      "name": "3. Job Recommendations",
      "item": [
        {
          "name": "Generate Recommendations",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    console.log('âœ… Generated', jsonData.data.totalMatches, 'recommendations');",
                  "    if (jsonData.data.recommendations.length > 0) {",
                  "        pm.environment.set('recommendationId', jsonData.data.recommendations[0]._id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/recommendations/generate?limit=20&minScore=40",
              "host": ["{{base_url}}"],
              "path": ["recommendations", "generate"],
              "query": [
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Max number of recommendations (default: 20)"
                },
                {
                  "key": "minScore",
                  "value": "40",
                  "description": "Minimum match score 0-100 (default: 40)"
                }
              ]
            },
            "description": "Generate job recommendations based on latest CV analysis and profile skills. Automatically triggered after CV analysis completes."
          }
        },
        {
          "name": "Get My Recommendations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/recommendations?status=recommended&limit=20",
              "host": ["{{base_url}}"],
              "path": ["recommendations"],
              "query": [
                {
                  "key": "status",
                  "value": "recommended",
                  "description": "Filter by status: recommended, viewed, applied, dismissed"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Number of results"
                }
              ]
            },
            "description": "Get user's job recommendations with full job details"
          }
        },
        {
          "name": "Get Recommendation Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/recommendations/{{recommendationId}}",
              "host": ["{{base_url}}"],
              "path": ["recommendations", "{{recommendationId}}"]
            },
            "description": "Get single recommendation with match score and criteria"
          }
        },
        {
          "name": "Mark as Viewed",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/recommendations/{{recommendationId}}/view",
              "host": ["{{base_url}}"],
              "path": ["recommendations", "{{recommendationId}}", "view"]
            },
            "description": "Mark recommendation as viewed (status: recommended â†’ viewed)"
          }
        },
        {
          "name": "Dismiss Recommendation",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/recommendations/{{recommendationId}}/dismiss",
              "host": ["{{base_url}}"],
              "path": ["recommendations", "{{recommendationId}}", "dismiss"]
            },
            "description": "Dismiss a recommendation (removes from active list)"
          }
        },
        {
          "name": "Get Recommendation Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/recommendations/stats",
              "host": ["{{base_url}}"],
              "path": ["recommendations", "stats"]
            },
            "description": "Get statistics: total recommendations, by status, average scores"
          }
        },
        {
          "name": "Clear All Recommendations",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/recommendations",
              "host": ["{{base_url}}"],
              "path": ["recommendations"]
            },
            "description": "Delete all recommendations for current user"
          }
        }
      ]
    },
    {
      "name": "4. Jobs",
      "item": [
        {
          "name": "List All Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/jobs?page=1&limit=20&status=active",
              "host": ["{{base_url}}"],
              "path": ["jobs"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            },
            "description": "List all active jobs (public endpoint)"
          }
        },
        {
          "name": "Get Job Details",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('jobId', jsonData.data._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/jobs/{{jobId}}",
              "host": ["{{base_url}}"],
              "path": ["jobs", "{{jobId}}"]
            },
            "description": "Get detailed job information"
          }
        }
      ]
    },
    {
      "name": "5. User Profile",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            },
            "description": "Get current user profile with skills"
          }
        },
        {
          "name": "Update Skills",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"skills\": [\"JavaScript\", \"React\", \"Node.js\", \"MongoDB\", \"Python\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/users/me",
              "host": ["{{base_url}}"],
              "path": ["users", "me"]
            },
            "description": "Update user skills (will affect job recommendations)"
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "console.log('ðŸš€ Request to:', pm.request.url.toString());"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if (pm.response.code >= 200 && pm.response.code < 300) {",
          "    console.log('âœ… Success:', pm.response.code);",
          "} else {",
          "    console.log('âŒ Error:', pm.response.code, pm.response.json());",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api/v1",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "analysisId",
      "value": "",
      "type": "string"
    },
    {
      "key": "recommendationId",
      "value": "",
      "type": "string"
    },
    {
      "key": "jobId",
      "value": "",
      "type": "string"
    }
  ]
}